<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you receive a phone call, Call2Push will look for a website address in your Address Book and Pipedrive contacts.\nThe website address is sent to your device via Pushbullet."/>

            <android.widget.LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Book, Google Contacts"/>

                <TextView
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add the following to your contact notes:\n\ncall2push: https://...."/>

            </android.widget.LinearLayout>

            <android.widget.LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pipedrive"/>

                <TextView
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pipedrive contact page with matching phone number will be pushed via Pushbullet."/>

                <Button
                    android:id="@+id/buttonPipedrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Pipedrive API Key"/>

                <Button
                    android:id="@+id/buttonPipedriveReload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reload Contacts"/>

                <TextView
                    android:padding="15dp"
                    android:id="@+id/statusPipedrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sync status"/>

            </android.widget.LinearLayout>

            <android.widget.LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pushbullet"/>

                <Button
                    android:id="@+id/buttonPushbulletAPI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Pushbullet API Key"/>
                <Button
                    android:id="@+id/buttonPushbulletDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Recipient Device"/>

                <Button
                    android:id="@+id/buttonPushbulletTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Test Message"/>


            </android.widget.LinearLayout>

            <android.widget.LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"/>


                <TextView
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://www.silentorbit.com/call2push"/>

            </android.widget.LinearLayout>
        </android.widget.LinearLayout>
    </ScrollView>

</android.widget.LinearLayout>
